//   save into storage, local
// when click on this save button, the collect both the user input and the id attached to the button that was clicked

$('.saveBtn').on('click',function(){
  
    var userInput = {
        input: $(this).prev().val(),
        id: $(this).prev().prev().attr('id')
        
    };
    
    // push object into local storage
    userArray = JSON.parse(localStorage.getItem('input'));
    if(!userArray){
        userArray = [];
    };
    userArray.push(userInput);
    localStorage.setItem('input',JSON.stringify(userArray));
    
        
   

     

}); 
// userArray = JSON.parse(window.localStorage.getItem('input'));
    

// load previously stored data onto screen when page is loaded. 
var loadInputs = function() {
    userArray = JSON.parse(localStorage.getItem("input"));
    // if there is no user input yet, set to empty string
    if(!userArray){
        userArray = {
            input:'',
            id: ''
        };
    };

    $.each(userArray, function(input, id) {
        
        // then loop over sub-array to determine input based on id and return text to rightful place
        userArray.forEach(function(userInput) {
            debugger;
            switch(userInput.id){
                case 'nine':
                    // userNine = userArray.slice(-1);
                   $('#nine').next().text(userNine[0].input)
                    break;
                case 'ten':
                    // userTen = userArray.slice(-1);
                    $('#ten').next().text(userTen[0].input)
                    break;
                case 'eleven': 
                    // userEleven = userArray.slice(-1);
                     $('#eleven').next().text(userEleven[0].input)
                    break;
                case 'twelve':
                    // userTwelve = userArray.slice(-1);
                    $('#twelve').next().text(userTwelve[0].input)

                    break;
                case 'thirteen':
                    // userThirteen = userArray.slice(-1);
                    $('#thirteen').next().text(userThirteen[0].input)

                    break;
                case 'fourteen':
                    // userFourteen = userArray.slice(-1);
                    $('#fourteen').next().text(userFourteen[0].input)
                    console.log(userFourteen[0].value)
                     
                    break;
                case 'fifteen':
                    // userFifteen = userArray.slice(-1);
                    $('#fifteen').next().text(userFifteen[0].input)

                    break;
                case 'sixteen': 
                    // userSixteen = userArray.slice(-1);
                    $('#sixteen').next().text(userSixteen[0].input)

                    break;
                case 'seventeen':
                    // userSeventeen = userArray.slice(-1);
                    $('#seventeen').next().text(userSeventeen[0].input)

                    break;
            
            };
        }
    )}
)};
            
                


loadInputs();